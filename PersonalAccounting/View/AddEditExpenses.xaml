<Window x:Class="PersonalAccounting.View.AddEditExpenses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalAccounting.View"
        mc:Ignorable="d"
        Title="Добавление расхода" Height="260" Width="200" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" 
        Background="#FFEA9D5B" WindowStyle="ToolWindow">
    <StackPanel Orientation="Vertical">
        <Label Content="Выберите категорию" FontFamily="Trebuchet ms" Margin="5,5,5,0"/>
        <ComboBox Height="24" Margin="5,0,5,0" Name="cbCategories">
        </ComboBox>
        <Label Content="Выберите дату" FontFamily="Trebuchet ms" Margin="5,5,5,0"/>
        <DatePicker Name="dpDate" Margin="5,0,5,0"/>
        <Label Content="Введите сумму" FontFamily="Trebuchet ms" Margin="5,5,5,0"/>
        <TextBox FontFamily="Trebuchet ms" Margin="5,5,5,0" MaxLength="25" Height="20" Name="tbSum"></TextBox>
        <Button Content="Добавить расход" Margin="5,5" Click="AddEditExpense" Name="btnAddEdit"></Button>
        <Button Content="Отмена" Margin="5,0" IsCancel="True" Name="btnCancel"></Button>
    </StackPanel>
</Window>
