<Window x:Class="PersonalAccounting.View.AddEditCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalAccounting.View"
        mc:Ignorable="d"
        Title="Добавление категории" Height="150" Width="200" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" 
        Background="#FFEA9D5B" WindowStyle="ToolWindow">
    <StackPanel Orientation="Vertical">
        <Label Content="Введите название категории" FontFamily="Trebuchet ms" Margin="5,5,5,0"/>
        <TextBox FontFamily="Trebuchet ms" Margin="5,5,5,0" MaxLength="30" Height="20" Name="tbCategory"></TextBox>
        <Button Content="Добавить категорию" Name="btnAddCategory" Margin="5,5" Click="addEditCategory"></Button>
        <Button Content="Отмена" Margin="5,0" IsCancel="True"></Button>
    </StackPanel>
</Window>
